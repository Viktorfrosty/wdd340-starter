<section class="frame">

  <h1>
    <%= title %>
  </h1>

  <%- messages() %>

  <% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <%  }) %>
    </ul>
    <% } %>

  <form id="updateForm" action="/inv/delete/" method="post">

    <label for="inv_model">
      Model:
    </label><br>
    <input type="text" id="inv_model" name="inv_model" pattern="^[A-Z0-9][A-Za-z0-9\s]*$" required value="<%= locals.inv_model %>" readonly><br>

    <label for="inv_make">
      Maker:
    </label><br>
    <input type="text" id="inv_make" name="inv_make" pattern="^[A-Z0-9][a-zA-Z0-9\s]*$" required value="<%= locals.inv_make %>" readonly><br>

    <label for="inv_year">
      Year:
    </label><br>
    <input type="text" id="inv_year" name="inv_year" pattern="^[0-9]{4}$" required value="<%= locals.inv_year %>" readonly><br>

    <label for="inv_price">
      Price:
    </label><br>
    <input type="text" id="inv_price" name="inv_price" pattern="^[0-9]{1,}$" required value="<%= locals.inv_price %>" readonly><br>

    <p>Confirm Deletion - The delete is permanent.</p><br>
    <input type="submit" value="Delete Vehicle">

    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { 
      %> value="<%= locals.inv_id %>"
    <% } %>>

  </form>

</section>

<script src="/js/script.js"></script>