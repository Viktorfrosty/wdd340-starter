<section class="frame">

    <h1><%= title %></h1>

    <%- messages() %>

    <% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <%  }) %>
    </ul>
    <% } %>

    <form action="/account/register" method="post">

        <label for="account_firstname">First Name</label><br>
        <ul>
            <li>First letter must be capital.</li>
            <li>No numbers allowed.</li>
            <li>No special characters allowed.</li>
        </ul><br>
        <input type="text" id="account_firstname" name="account_firstname" placeholder="Jhon" pattern="^[A-Z][A-Za-z]*$" required value="<%= locals.account_firstname %>"><br>

        <label for="account_lastname">Last Name</label><br>
        <ul>
            <li>First letter must be capital.</li>
            <li>No numbers allowed.</li>
            <li>No special characters allowed.</li>
        </ul><br>
        <input type="text" id="account_lastname" name="account_lastname" placeholder="Doe" pattern="^[A-Z][A-Za-z]*$" required value="<%= locals.account_lastname %>"><br>

        <label for="account_email">Email</label><br>
        <input type="email" id="account_email" name="account_email" placeholder="your@email.com" required value="<%= locals.account_email %>"><br>

        <label for="account_password">
            Password must contain:
        </label><br>
        <ul>
            <li>12 characters in length, minimum.</li>
            <li>at least 1 capital letter.</li>
            <li>at least 1 number.</li>
            <li>at least 1 special character.</li>
        </ul><br>
        <input type="password" id="account_password" name="account_password" placeholder="Enter a valid password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required><br>

        <input type="submit" value="Register">

    </form>

</section>
<script src="/js/script.js"></script>